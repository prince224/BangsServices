{% extends "::layout_business.html.twig" %}

{% block menu %}
    {{ render(controller('DomaineBundle:Default:inserer_menu_page')) }}
{% endblock %}    

{% block carousel %}
    <section id="main-slider" class="no-margin">
        <div id="myCarousel{{ page.id }}" class="carousel slide" data-ride="carousel">    
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#myCarousel{{ page.id }}" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel{{ page.id }}" data-slide-to="1"></li>
              <li data-target="#myCarousel{{ page.id }}" data-slide-to="2"></li>
            </ol>
     
            <div class="row-fluid carousel-inner" role="listbox">
             
              {% if page.photos is not empty %}
                {% for photo in page.photos %}
                {% if photo.numero == 0 %}
                <div class="item">
                    <img class="col-lg-12" src="{{asset(photo.webPath)}} " alt="ball trap du rabot" title="evenement le rabot balltrap">
                  
                    <div class="col-lg-8 col-xs-12 carousel-caption">
                        {% if photo.description is not empty %}
                            <p class="animation animated-item-2">
                                {{ photo.description|raw }} 
                            </p>
                        {% endif %}
                    </div>
                  
                </div>
                          
                {% endif %}
                {% endfor %}
              {% endif %}
            </div>
            <a class="left carousel-control" href="#myCarousel{{ page.id }}" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel{{ page.id }}" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>        
        </div><!-- /.carousel -->
    </section><!--/#main-slider-->
{% endblock %}

