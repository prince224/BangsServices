{% extends "::layout_admin.html.twig" %}

{% form_theme form 'DomaineBundle:Form:fields.html.twig' %}


{% block section %}
<h1>Ajout d'un document:</h1>
{% if page is defined %}
	<p>Page concernée : <strong>{{ page.nom }} </strong> </p>
{% endif %}

{% if sousmenu is defined %}
	<p>sous menu concernée : <strong>{{ sousmenu.nom }} </strong> </p>
{% endif %}
<div class="well">
  <form action="#" method="post" {{ form_enctype(form) }}>
  	<table class="table responsive">
  		<tbody>
  			{{ form(form) }}
  		</tbody>
  	</table>
   
    <input type="submit" class="btn btn-success" />
  </form>
</div>
{% endblock %}
