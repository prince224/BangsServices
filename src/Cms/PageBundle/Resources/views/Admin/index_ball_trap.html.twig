        {% endif %}

        <hr><hr>

        {% for i in categorie.photos %}
            {% if i.numero == 1 and i.onglet == 0 %}
                <div class="col-lg-12">
                    <img class="col-lg-10" src="{{asset(i.webPath)}} ">
                    <a href="{{path('domaine_admin_modifier_bandeau_activite', {'idActivite' : categorie.id , 'idPhoto' : i.id })}} " class="btn btn-success">Modifier</a>
                    <a href="{{path('domaine_admin_supprimer_bandeau_activite', {'idActivite' : categorie.id , 'idPhoto' : i.id })}} " class="btn btn-danger">Supprimer</a>
                </div>
            {% endif %}
        {% endfor %}
