{% extends "::layout_admin.html.twig" %}

{% block section %}
    <h1>Gestion des pages du site </h1>
    <h3>Page : <em> {{ page.nom }} </em></h3>
    <hr>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5"><h4>Sous-menu : <strong> {{ sousmenu.nom|upper }} </strong></h4></div>
            <div class="col-md-2">
                <a href="{{path('Page_admin_ajouter_image_carousel_page', {'idpage' : page.id })}} "><span class="glyphicon glyphicon-plus"></span> Ajouter slider</a>
            </div>
            <div class="col-md-3">
                <a href="{{path('Page_admin_ajouter_section_page',{'idpage' : page.id })}} "><span class="glyphicon glyphicon-plus"></span> Ajouter section</a>
            </div>
        </div>
        <hr>
        <br>
        <div class="col-md-12">
        {% if photo_carousel is not empty %}
        <h4>Photos slider : </h4>
            {% for photo in photo_carousel %}
                <div class="col-md-6">
                    <img class="col-lg-12" src="{{asset(photo.webPath)}} ">
                    <a href="{{path('Page_admin_modifier_image_carousel_page', {'idphoto': photo.id, 'idpage' : page.id })}} " class="btn-success"> Modifier slider</a> 

                    <a href="{{path('Page_admin_supprimer_image_carousel_page', {'idphoto': photo.id, 'idpage' : page.id })}} " class="btn-danger"> Supprimer slider</a>
                </div>
            {% endfor %}
        {% endif %}
        </div>
        <div class="col-md-12">
            <p><strong>Contenu :</strong> <br>
                {{ sousmenu.contenu|raw }}
            </p>
            <p>
                <a href="{{path('Page_admin_modifier_sous_menu_page',{'idsousmenu' : sousmenu.id })}} " class="btn btn-success">Modifier</a>

                <a href="{{path('Page_admin_supprimer_sous_menu_page',{'idsousmenu' : sousmenu.id })}} " class="btn btn-danger">Supprimer</a>
            </p>
        </div>
    </div>

    <div class="col-lg-12">
        
        {% if sections is defined %}
        {% if sections is not empty %}
        
        <table class="table responsive">
            <thead>
                <th>Nom</th>
                <th>Cat√©gories contenu</th>
                <th>Position</th>
            </thead>
            <tbody>
                {% for section in sections %}
                <tr> 
                    <td><strong class="col-md-2">{{ section.nom }} </strong>
                        <a class="col-md-2" href="{{path('Page_admin_modifier_section_page', {'idsection' : section.id })}} ">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a class="col-md-2" href="{{path('Page_admin_supprimer_section_page', {'idsection': section.id })}} "> 
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                    <td>
                        {% if section.categories is not empty %}
                            <ul>
                            {% for categorie in section.categories %}
                                <li> {{ categorie.nom }} 
                                    <a href="{{path('Page_admin_supprimer_categories_section_page', {'idsection' : section.id, 'categorie' : categorie.id })}} "> 
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </li>
                            {% endfor %}
                            </ul>
                        {% endif %}
                    </td>
                    <td>
                        {% if section.numero == 0 %}
                            A droite
                        {% endif %}
                        {% if section.numero == 1 %}
                            Au milieu
                        {% endif %}
                        {% if section.numero == 2 %}
                            A gauche
                        {% endif %}
                </tr>
                    
                {% endfor %}
            </tbody>
        </table>
        {% endif %}

        {% endif %}
    </div>

	



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="{{asset('bootstrap/js/bootstrap.min.js')}} "></script>

    <script type="text/javascript">
      $(document).ready(function(){

        $('#accueil').addClass('en_cour');
        $('#paintball').removeClass('active');
        $('#espaceloisirs').removeClass('active');
        $('#paddockotels').removeClass('active');
       
      });
    </script>
{% endblock %}